{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GGCircuit Command Center",
  "version": "0.1.0",
  "identifier": "com.ggcircuit.commandcenter",
  "build": {
    "beforeDevCommand": "npm run dev:client",
    "devUrl": "http://localhost:5000",
    "beforeBuildCommand": "npm run build:client",
    "frontendDist": "../dist/public"
  },
  "app": {
    "windows": [
      {
        "title": "GGCircuit Command Center",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
